@model Emvisi.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div class="text-left form-table side-by-side">
    <h2 class="text-left">Create a new account</h2>
    @Ajax.ActionLink("Register Your Gym", "Create", "Gyms",
    new AjaxOptions
    {
        HttpMethod = "GET", // HttpMethod to use, GET or POST
        UpdateTargetId = "head-content", // ID of the HTML element to update
        InsertionMode = InsertionMode.Replace, // Replace the existing contents
        LoadingElementId = "loader-overlay",
    })
     <a class="mobile-only secondary-toggle" onclick="SwitchContent()">About Us</a>

    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Username, new { @class = "form-control", @placeholder = @Html.DisplayNameFor(m => m.Username) })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = @Html.DisplayNameFor(m => m.Email) })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = @Html.DisplayNameFor(m => m.Password) })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = @Html.DisplayNameFor(m => m.ConfirmPassword) })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Greeting, new { @class = "form-control", @placeholder = @Html.DisplayNameFor(m => m.Greeting) })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-4">
                <input type="submit" class="btn btn-default" value="Register" />
            </div>
        </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
